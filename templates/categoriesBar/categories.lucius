.recipe-categories{
    position: fixed;
    top: 65px;
    width: 100%;
    height:45px;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: var(--fg-color);
}

.categories{
    display: flex;
    justify-content: center;
    align-items: center;
    height: 40px;
}

.categories li{
    margin-right: 10px;
    font-size: .8em;
}

.categories li a{
    color: var(--fg-color-reverse-dk);
}

.navigation, .recipe-categories{
    z-index: 1;
}